{
    "manifest_version": 2,
    "name": "Amazon Web Search",
    "version": "1.0",
  
    "description": "Hot keys for searching Amazon Web Services",
  
    "content_scripts": [
      {
        "matches": ["*://*.console.aws.amazon.com/*"],
        "js": ["amazon-web-search.js"]
      }
    ],

    "icons": {
      "48": "icons/ico_48x48.png",
      "96": "icons/ico_96x96.png"
    },
    
    "options_ui": {
        "page": "options.html"
    },
    
    "permissions": ["storage"],
    
    "applications": {
        "gecko": {
          "id": "amazonwebsearch@mk9.me"
        }
    }
  
  }